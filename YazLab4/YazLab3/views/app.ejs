      margin: 20px;
    }

    input {
      padding: 10px;
      margin-right: 10px;
      width: 300px;
      border-radius: 5px;
    }

    button {
      padding: 10px;
      cursor: pointer;
      border-radius: 5px;
    }

    .card {
      margin: 15px;
      width: 15rem;
    }

    .cards {
      display: grid;
      grid-template-columns: auto auto auto auto auto;
